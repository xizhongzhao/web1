{% block header %}
    <h1>Header</h1>
{% endblock %}
{% block content %}
    {{ coure_item(course) }}
{% endblock %}
{% block footer %}
{% endblock %}
<h1>hello world</h1>
<p>name: {{ course.name }} </p>
<p>user count: {{ course.user_count }} </p>
<p> teacher: {{ course.teacher }} </p>
<p> is_private: {{ course.is_private }} </p>
<p>not exist: {{ course.not_exist }}</p>
